{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "baseUrl": "src/",
    "typeRoots": ["src/types", "src/common/types", "node_modules/@types"],
    "strict": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "jsx": "preserve",
    "noFallthroughCasesInSwitch": true,
    "incremental": true,
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": ["node", "jest"],
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "paths": {
      "@matreg/speckle-viewer": ["../../../libs/speckle-viewer/src/index.ts"],
      "@matreg/canvas": ["../../../libs/canvas/src/index.ts"],
      "@matreg/canvas/*": ["../../../libs/canvas/src/*"],
      "@matreg/common": ["../../../libs/common/src/index.ts"],
      "@matreg/ui": ["../../../libs/ui/src/index.ts"],
      "@matreg/ui/*": ["../../../libs/ui/src/*"],
      "@matreg/types": ["../../../libs/types/src/index.ts"],
      "@matreg/types/*": ["../../../libs/types/src/*"],
      "@matreg/assets/*": ["../../../libs/assets/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "src",
    "app",
    "shared",
    "../../apps/fe/.next/types/**/*.ts",
    "shared/sharedClientComponents.ts"
  ],
  "exclude": ["node_modules"]
}
